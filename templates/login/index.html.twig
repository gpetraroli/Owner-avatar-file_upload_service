{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid col col-md-4 shadow mt-5 p-3 rounded">

        <h1>Login</h1>

        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('app_login') }}" method="post">
            <div class="d-flex flex-column gap-3 p-5">
                <div class="d-flex flex-column">
                    <label for="username">Email</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}">
                </div>

                <div class="d-flex flex-column">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="_password">
                </div>


                <button class="btn btn-primary align-self-start" type="submit">login</button>

                <a href="{{ path('app_register') }}">Don't have an account?</a>

                <input type="hidden" name="_target_path" value="{{ path('app_container_list') }}">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            </div>
        </form>
    </div>
{% endblock %}